<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDateOfOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFoodtruckName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvFoodtruckName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvNumberOfItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvDateOfOrder"
            android:layout_toRightOf="@id/tvDateOfOrder"
            android:layout_marginLeft="100dp"
            android:text="TextView" />
        <TextView
            android:id="@+id/tvPriceOfOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvDateOfOrder"
            android:layout_toRightOf="@id/tvNumberOfItems"
            android:layout_marginLeft="100dp"
            android:text="TextView" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>